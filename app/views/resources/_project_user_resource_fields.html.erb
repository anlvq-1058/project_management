<div class="nested-fields">
  <div class="mb-3 row">
    <div class="col-5">
      <%= f.collection_select(:project_user_id, list_members(params[:project_id]), :last, :first , { prompt: t(".select_member") }, { class: "form-select", required: true }) %>
    </div>
    <div class="col-4">
      <%= f.number_field :percentage , class: "form-control", placeholder: t(".effort"),max: Settings.number.value_100, min: Settings.number.value_0, required: true %>
    </div>
  </div>
  <%= link_to_remove_association t(".remove"), f %>
</div>
