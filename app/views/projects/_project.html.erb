<tr>
  <td><%= project.group_name %></td>
  <td><%= project.name %></td>
  <td><%= project.description %></td>
  <td class="text-center">
    <span class="badge rounded-pill text-bg-<%= project.status %>">
      <%= t ".#{project.status}" %>
    </span>
  </td>
  <td><%= format_date project.start_date %></td>
  <td><%= format_date project.end_date %></td>
  <td class="text-center">
    <%= link_to project_path(project), class: "btn btn-primary btn-sm" do %>
      <i class="bi-eye-fill"></i>
    <% end %>
    <button type="button" class="btn btn-success btn-sm">
      <i class="bi-pencil-square"></i>
    </button>
    <%= link_to project, data: { "turbo-method": :delete, turbo_confirm: t("projects.you_sure?") }  do %>
      <button type="button" class="btn btn-danger btn-sm">
        <i class="bi-trash-fill text-light"></i>
      </button>
    <% end %>
  </td>
</tr>
