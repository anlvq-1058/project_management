<%= form_with url: reports_path, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="col-auto">
    <%= f.label :date,  t(".date_report") %>
    <%= f.date_field :date, value: params[:date] %>
  </div>
  <div class="col-auto">
    <%= f.label :name,  t(".name") %>
    <%= f.text_field :name, value: params[:name] %>
  </div>
  <div class="col-auto">
    <%= f.label :status, t(".status") %>
    <%= f.select :status, list_statuses, {include_blank: true, selected: params[:status]} %>
  </div>
  <div class="col-auto">
    <%= f.submit t(".search"), class: "btn btn-primary" %>
    <%= link_to reports_path, class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-counterclockwise"></i>
    <% end %>
  </div>
<% end %>
